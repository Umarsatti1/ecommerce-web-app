{
    "containerDefinitions": [
        {
            "name": "ecommerce-app-container",
            "image": "730335208305.dkr.ecr.us-east-1.amazonaws.com/ecommerce-app:latest",
            "cpu": 1024,
            "memory": 3072,
            "memoryReservation": 1024,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "AWS__SecretKey",
                    "value": "${{ secrets.AWS_SECRET_KEY }}"
                },
                {
                    "name": "ConnectionStrings__DefaultConnection",
                    "value": "${{ secrets.AWS_DB_CONNECTION }}"
                },
                {
                    "name": "AWS__BucketName",
                    "value": "${{ secrets.AWS_BUCKET_NAME }}"
                },
                {
                    "name": "AWS__Region",
                    "value": "${{ secrets.AWS_REGION }}"
                },
                {
                    "name": "StripeSettings__PublishableKey",
                    "value": "${{ secrets.AWS_PUBLISHABLE_KEY }}"
                },
                {
                    "name": "AWS__AccessKey",
                    "value": "${{ secrets.AWS_ACCESS_KEY }}"
                },
                {
                    "name": "StripeSettings__WhSecret",
                    "value": "${{ secrets.AWS_WH_SECRET }}"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/ecommerce-app-task",
                    "awslogs-region": "${{ secrets.AWS_REGION }}",
                    "awslogs-create-group": "true",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "systemControls": []
        }
    ],
    "family": "ecommerce-app-task",
    "taskRoleArn": "arn:aws:iam::730335208305:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::730335208305:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "ephemeralStorage": {
        "sizeInGiB": 21
    }
}
